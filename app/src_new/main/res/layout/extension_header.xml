<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@color/list_header_background"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="5dp">
		<fr.codlab.cartes.widget.RobotoTextview
            typeface="regular" android:id="@+id/visu.extension.nom"
			android:gravity="center_horizontal|center_vertical" android:textSize="22dp"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="Set de base" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:paddingTop="5dp" android:paddingLeft="10dp" android:layout_alignParentLeft="true">
				<fr.codlab.cartes.widget.RobotoTextview
                    typeface="thin" android:gravity="left" android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true" android:text="@string/total" />
				<fr.codlab.cartes.widget.RobotoTextview
                    typeface="thin" android:id="@+id/visu.extension.cartes"
					android:gravity="left" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:gravity="right" android:paddingTop="5dp"
				android:paddingRight="10dp">
				<fr.codlab.cartes.widget.RobotoTextview
                    typeface="thin" android:gravity="left" android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true" android:text="@string/possedees" />
				<fr.codlab.cartes.widget.RobotoTextview
                    typeface="thin" android:id="@+id/visu.extension.possess"
					android:gravity="right" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>